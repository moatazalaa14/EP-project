<h3>{{viewTitle}}</h3>

<form action="/qus" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{qus._id}}">
    <div class="form-group">
        <label>Subject</label>
        <input type="text" class="form-control" name="subject" placeholder="Subject" value="{{qus.subject}}">
        <div class="text-danger">
            {{qus.subjectError}}</div>
    </div>
     <div class="form-group">
        <label>Author</label>
        <input type="text" class="form-control" name="author" placeholder="author" value="{{qus.author}}">
        <div class="text-danger">
            {{qus.authorError}}</div>
    </div>
    <div class="form-group">
        <label>qus</label>
        <textarea  class="form-control" name="content" placeholder="qus" rows="20" cols="50">{{qus.content}}</textarea>
        <div class="text-danger">
            {{qus.contentError}}</div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/qus/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>